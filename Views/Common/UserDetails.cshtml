@model AKStore.Models.UsersModel

@{
    ViewBag.Title = "Profile";
}


<div class="container" style="margin:0px;padding:0px;">

    <div class="row">
        <div class="col-12 ">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Profile</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 col-sm-6 small">
                            <a href="@Url.Action("UpdateProfile","Common")">Update Profile</a>
                        </div>
                        <div class="col-6 col-sm-6 small">
                            <a href="@Url.Action("UpdatePassword","Common")">Update Password</a>
                        </div>
                    </div>
                    <hr />
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered border">
                            <tbody>
                                <tr>
                                    <th>@Html.LabelFor(Model => Model.UserName, htmlAttributes: new { @class = "font-weight-bold" })</th>
                                    <td> @Html.DisplayFor(model => model.UserName)</td>
                                </tr>
                                <tr>
                                    <th>@Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "font-weight-bold" })</th>
                                    <td> @Html.DisplayFor(model => model.FirstName)</td>
                                </tr> 
                                <tr>
                                    <th>@Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "font-weight-bold" })</th>
                                    <td> @Html.DisplayFor(model => model.LastName)</td>
                                </tr>
                                <tr>
                                    <th>@Html.LabelFor(model => model.PhNo1, htmlAttributes: new { @class = "font-weight-bold" })</th>
                                    <td> @Html.DisplayFor(model => model.PhNo1)</td>
                                </tr>
                                <tr>
                                    <th>@Html.LabelFor(model => model.PhNo2, htmlAttributes: new { @class = "font-weight-bold" })</th>
                                    <td> @Html.DisplayFor(model => model.PhNo2)</td>
                                </tr>
                                <tr>
                                    <th>@Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "font-weight-bold" })</th>
                                    <td>@Html.DisplayFor(model => model.Address)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>